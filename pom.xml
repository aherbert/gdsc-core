<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.scijava</groupId>
		<artifactId>pom-scijava</artifactId>
		<version>22.2.0</version>
		<relativePath />
	</parent>

	<groupId>gdsc</groupId>
	<artifactId>gdsc-core</artifactId>
	<version>1.2.0</version>
	<packaging>jar</packaging>

	<name>GDSC Core library for ImageJ</name>
	<url>http://www.sussex.ac.uk/gdsc/intranet/microscopy/imagej/gdsc_plugins</url>

	<licenses>
		<license>
			<name>GNU General Public License (GPL) version 3.0</name>
			<url>http://www.gnu.org/licenses/gpl.txt</url>
			<distribution>manual</distribution>
		</license>
	</licenses>

	<inceptionYear>2013</inceptionYear>
	<contributors>
		<contributor>
			<name>Alex Herbert</name>
		</contributor>
	</contributors>
	<mailingLists>
		<mailingList>
			<name>ImageJ Forum</name>
			<archive>http://forum.imagej.net/</archive>
		</mailingList>
	</mailingLists>
	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/aherbert/GDSC-Core/issues</url>
	</issueManagement>
	<ciManagement>
		<system>None</system>
	</ciManagement>
	<scm>
		<url>https://github.com/aherbert/GDSC-Core</url>
	</scm>

	<developers>
		<developer>
			<id>aherbert</id>
			<name>Alex Herbert</name>
			<email>a.herbert@sussex.ac.uk</email>
			<roles>
				<role>developer</role>
			</roles>
		</developer>
	</developers>

	<properties>
		<license.licenseName>gpl_v3</license.licenseName>
		<license.copyrightOwners>Alex Herbert</license.copyrightOwners>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<!-- NOTE: We don't need a groupId specification because the group is 
						org.apache.maven.plugins ...which is assumed by default. -->
					<artifactId>maven-assembly-plugin</artifactId>
					<configuration>
						<descriptorRefs>
							<descriptorRef>jar-with-dependencies</descriptorRef>
						</descriptorRefs>
						<archive>
							<manifest>
								<addClasspath>true</addClasspath>
								<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
								<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							</manifest>
						</archive>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

	<dependencies>
		<dependency>
			<groupId>gdsc</groupId>
			<artifactId>gdsc-analytics</artifactId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<groupId>net.imagej</groupId>
			<artifactId>ij</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-math3</artifactId>
		</dependency>
		<!-- https://mvnrepository.com/artifact/net.sf.trove4j/trove4j -->
		<dependency>
			<groupId>net.sf.trove4j</groupId>
			<artifactId>trove4j</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- https://mvnrepository.com/artifact/de.lmu.ifi.dbs.elki/elki -->
		<!-- Used to test the DBSCAN and OPTICS algorithms -->
		<dependency>
			<groupId>de.lmu.ifi.dbs.elki</groupId>
			<artifactId>elki</artifactId>
			<version>0.7.1</version>
			<scope>test</scope>
		</dependency>
		<!-- https://mvnrepository.com/artifact/commons-codec/commons-codec -->
		<!-- Used to test the Digest algorithms -->
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>imagej.releases</id>
			<url>http://maven.imagej.net/content/repositories/releases</url>
		</repository>
		<repository>
			<id>imagej.snapshots</id>
			<url>http://maven.imagej.net/content/repositories/snapshots</url>
		</repository>
		<repository>
			<id>apache.central</id>
			<url>http://repo.maven.apache.org/maven2</url>
		</repository>
	</repositories>

	<organization>
		<name>Genome Damage and Stability Centre</name>
		<url>http://www.sussex.ac.uk/gdsc/</url>
	</organization>
	<description>Genome Damage and Stability Centre ImageJ Core Package

The GDSC ImageJ Core package contains core code used by the GDSC
ImageJ Plugins and GDSC SMLM ImageJ Plugins. The packages contain
many plugins for image analysis and may be used independently or
together. This codebase contains core code used by both packages.

GDSC ImageJ Plugins:
Software for image analysis

GDSC SMLM ImageJ Plugins:
Software for use in single molecule localisation microscopy
(SMLM), e.g. STORM, PALM.
</description>
</project>
